<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/frmlyt_select_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:ignore="UselessParent">

    <ImageView
        android:id="@+id/rctngl_time"
        android:layout_width="291dp"
        android:layout_height="356dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/rctngl_time"
        tools:ignore="ContentDescription,ImageContrastCheck,ObsoleteLayoutParam" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:text="Select Time"
        android:textAppearance="@style/select_time"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,TextSizeCheck" />

    <ImageButton
        android:id="@+id/btn_cancel"
        android:layout_width="96dp"
        android:layout_height="31dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/btn_cancel"
        tools:ignore="ContentDescription,ObsoleteLayoutParam,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btn_ok"
        android:layout_width="96dp"
        android:layout_height="31dp"
        android:layout_below="@+id/txt_time"
        android:layout_marginTop="300dp"
        android:layout_marginStart="160dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/btn_ok"
        tools:ignore="ContentDescription,ImageContrastCheck,ObsoleteLayoutParam,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/time_format"
        android:layout_width="241dp"
        android:layout_height="240dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        tools:ignore="ContentDescription,ObsoleteLayoutParam" />
    </FrameLayout>
</RelativeLayout>